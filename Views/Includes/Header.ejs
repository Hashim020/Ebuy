				<li><a href="#"><i class="fa fa-envelope-o"></i> email@email.com</a></li>
				<li><a href="#"><i class="fa fa-map-marker"></i> 1734 Stonecoal Road</a></li>
			</ul>
			<ul class="header-links pull-right">
				<!-- <li><a href="#"><i class="fa fa-rupee"></i> INR</a></li> -->
				<!-- <li><a href="/myaccount"><i class="fa fa-user-o"></i> My Account</a></li> -->
				<div class="dropdown">
					<button class="  primary-btn cta-btn btn-sm" style="font-size: 10px;" type="button"
						id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
						Login
					</button>
					<div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
						<% if (user) { %>
							<li><a class="dropdown-item" style="color: black;" href="/MyAccount">My Account</a></li>
							<li><a class="dropdown-item" style="color: black;" href="/logout">LogOut</a></li>
							<% } else { %>
								<li><a class="dropdown-item" style="color: black;" href="/register">Register</a>
								<li> <a class="dropdown-item" style="color: black;" href="/login">Login</a></li>
								<% } %>
									
									
										


									<!-- <a class="dropdown-item" href="#">Another action</a>
							  <a class="dropdown-item" href="#">Something else here</a> -->
					</div>
				</div>
			</ul>
		</div>
	</div>
	<!-- /TOP HEADER -->

	<!-- MAIN HEADER -->
	<div id="header">
		<!-- container -->
		<div class="container">
			<!-- row -->
			<div class="row">
				<!-- LOGO -->
				<div class="col-md-3">
					<div class="header-logo">
						<a href="/" class="logo">
							<img src="../Assets/img/Logo.png" alt="">
						</a>
					</div>
				</div>
				<!-- /LOGO -->

				<!-- SEARCH BAR -->
				<div class="col-md-6">
					<div class="header-search">
						<form action="/search-items" method="post">
							<select class="input-select">
								<option value="0">All Categories</option>
								<!-- <option value="1">Category 01</option>
										<option value="1">Category 02</option> -->
							</select>
							<input class="input" id="searchInput" name="qeury" placeholder="Search here">
							<button type="submit" class="search-btn">Search</button>
						</form>
					</div>
				</div>
				<!-- /SEARCH BAR -->

				<!-- ACCOUNT -->
				<div class="col-md-3 clearfix">
					<div class="header-ctn">
						<!-- Wishlist -->
						<div>
							<a href="#">
								<i class="fa fa-heart-o"></i>
								<span>Your Wishlist</span>
								<!-- <div class="qty">2</div> -->
							</a>
						</div>
						<!-- /Wishlist -->

						<!-- Cart -->
						<div class="dropdown">
							<a href="http://localhost:3000/view-cart">
								<i class="fa fa-shopping-cart"></i>
								<span>Your Cart</span>
								<% if (totalQuantity) { %>
									<div class="qty">
										<%= totalQuantity %>
									</div>
									<% } else { %>
										<div class="qty">0</div>
										<% } %>

							</a>
						</div>
						<!-- /Cart -->

						<!-- Menu Toogle -->
						<div class="menu-toggle">
							<a href="#">
								<i class="fa fa-bars"></i>
								<span>Menu</span>
							</a>
						</div>
						<!-- /Menu Toogle -->
					</div>
				</div>
				<!-- /ACCOUNT -->
			</div>
			<!-- row -->

		</div>
		<!-- container -->
	</div>
	<!-- /MAIN HEADER -->
	<!-- ======================================= script ========================================================== -->

	<!-- ========================================================================================================= -->
</header>
<!-- /HEADER -->