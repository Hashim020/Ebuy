<!-- HEADER -->
<header>
	<!-- TOP HEADER -->
	<div id="top-header">
		<div class="container">
			<ul class="header-links pull-left">
				<li><a href="#"><i class="fa fa-phone"></i> +021-95-51-84</a></li>
				<li><a href="#"><i class="fa fa-envelope-o"></i> ebuy@shop.com</a></li>
				<li><a href="https://maps.app.goo.gl/Z4uQZJSsY7mebP2A9"><i class="fa fa-map-marker"></i> 1734 Stonecoal Road</a></li>
			</ul>
			<ul class="header-links pull-right">
				<div class="dropdown">
					<% if(user1){%>
						<i style="font-size: 15px;" class="fa fa-user fa-2x dropdown-toggle" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"> <%=user1.name%></i>
					<%} else{%>
						<i style="font-size: 17px;" class="fa fa-user fa-2x dropdown-toggle" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"> Sign in</i>
					<%}%>

					<div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
						<% if (user1) { %>
							<li><a class="dropdown-item" style="color: black;" href="/MyAccount">My Account</a></li>
							<li><a class="dropdown-item" style="color: black;" href="/logout">LogOut</a></li>
							<% } else { %>
								<li><a class="dropdown-item" style="color: black;" href="/register">Register</a>
								<li> <a class="dropdown-item" style="color: black;" href="/login">Login</a></li>
								<% } %>





									<!-- <a class="dropdown-item" href="#">Another action</a>
							  <a class="dropdown-item" href="#">Something else here</a> -->
					</div>
				</div>
			</ul>
		</div>
	</div>
	<!-- /TOP HEADER -->

	<!-- MAIN HEADER -->
	<div id="header">
		<!-- container -->
		<div class="container">
			<!-- row -->
			<div class="row">
				<!-- LOGO -->
				<div class="col-md-3">
					<div class="header-logo">
						<a href="/" class="logo">
							<img src="../Assets/img/logo.png" alt="">
						</a>
					</div>
				</div>
				<!-- /LOGO -->

				<!-- SEARCH BAR -->
				<div class="col-md-6">
					<div class="header-search">
						<form action="/search-items" method="post">
							<select class="input-select">
								<option value="0">All Categories</option>
								<!-- <option value="1">Category 01</option>
										<option value="1">Category 02</option> -->
							</select>
							<input class="input" id="searchInput" name="qeury" placeholder="Search here">
							<button type="submit" class="search-btn">Search</button>
						</form>
					</div>
				</div>
				<!-- /SEARCH BAR -->

				<!-- ACCOUNT -->
				<div class="col-md-3 clearfix">
					<div class="header-ctn">
						<!-- Wishlist -->
						<div>
							<a href="#">
								<i class="fa fa-heart-o"></i>
								<span>Your Wishlist</span>
								<!-- <div class="qty">2</div> -->
							</a>
						</div>
						<!-- /Wishlist -->

						<!-- Cart -->
						<div class="dropdown">
							<a href="/view-cart">
								<i class="fa fa-shopping-cart"></i>
								<span>Your Cart</span>
								<% if (totalQuantity) { %>
									<div class="qty">
										<%= totalQuantity %>
									</div>
									<% } else { %>
										<div class="qty">0</div>
										<% } %>

							</a>
						</div>
						<!-- /Cart -->

						<!-- Menu Toogle -->
						<div class="menu-toggle">
							<a href="#">
								<i class="fa fa-bars"></i>
								<span>Menu</span>
							</a>
						</div>
						<!-- /Menu Toogle -->
					</div>
				</div>
				<!-- /ACCOUNT -->
			</div>
			<!-- row -->

		</div>
		<!-- container -->
	</div>
	<!-- /MAIN HEADER -->
	<!-- ======================================= script ========================================================== -->

	<!-- ========================================================================================================= -->
</header>
<!-- /HEADER -->