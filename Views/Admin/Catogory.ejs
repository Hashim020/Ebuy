<script>
  document.addEventListener("DOMContentLoaded", function () {
      const editableRows = document.querySelectorAll(".editable-row");

      editableRows.forEach(row => {
          const editButton = row.querySelector(".edit-button");
          const saveButton = row.querySelector(".save-button");
          const cancelButton = row.querySelector(".cancel-button");
          const editableFields = row.querySelectorAll(".editable-field");
          const inputFields = row.querySelectorAll("input");

          editButton.addEventListener("click", () => {
              editableFields.forEach(field => field.classList.add("d-none"));
              inputFields.forEach(input => input.classList.remove("d-none"));
              editButton.classList.add("d-none");
              saveButton.classList.remove("d-none");
              cancelButton.classList.remove("d-none");
          });









          cancelButton.addEventListener("click", () => {
              editableFields.forEach((field, index) => {
                  inputFields[index].value = field.textContent;
                  inputFields[index].classList.add("d-none");
                  field.classList.remove("d-none");
              });

              editButton.classList.remove("d-none");
              cancelButton.classList.add("d-none");
          });
      });
  });

    const addButton = document.getElementById("addButton");
  const addForm = document.getElementById("addForm");

  addButton.addEventListener("click", () => {
      addForm.classList.toggle("d-none");
  });

  document.addEventListener("DOMContentLoaded", function () {
    const editableRows = document.querySelectorAll(".editable-row");

    editableRows.forEach(row => {
        const saveButton = row.querySelector(".save-button");
        const inputFields = row.querySelectorAll("input");

        saveButton.addEventListener("click", () => {
            const categoryId = saveButton.getAttribute("data-category-id");
            const categoryNameInput = row.querySelector('input[name="categoryname"]');
            const categoryDescriptionInput = row.querySelector('input[name="categorydescription"]');

            const updatedData = {
                categoryId: categoryId,
                categoryName: categoryNameInput.value,
                categoryDescription: categoryDescriptionInput.value
            };

            // Assuming you're using the Fetch API for AJAX requests
            fetch('/updatecategory', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify(updatedData)
            })
            .then(response => response.json())
            .then(data => {
                // Handle the server response here if needed
                console.log(data); // Example: logging the server response
            })
            .catch(error => {
                console.error('Error:', error);
            });
        });
    });
});


