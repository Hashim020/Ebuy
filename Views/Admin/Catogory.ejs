<div class="container-fluid">
  <div class="card">
      <div class="card-body">
          <h2 class="d-inline-block">Category Management</h2>
          <% if(typeof message!=='undefined' ){ %>
            <h6 style="color:#04c414;">  <%= message %></h6>
            <% } %>
          <button id="addButton" class="btn btn-success float-end">Add New</button>
          <div id="addForm" class="d-none mt-4">
              <h4>Add New Category</h4>
              <form action="addcatogory" method="post">
                  <div class="mb-3">
                      <label for="categoryName" class="form-label">Category Name</label>
                      <input name="Categoryname" type="text" class="form-control" id="categoryName" required>
                  </div>
                  <div class="mb-3">
                      <label for="categoryDescription" class="form-label">Category Description</label>
                      <textarea type="text" name="Categorydescription" class="form-control" id="categoryDescription" rows="4" required></textarea>
                  </div>
                  <button type="submit" id="saveButton" class="btn btn-primary">Save</button>
              </form>
          </div>
          <form action="updatecategory" method="post">

          <table class="table mt-4">
            <thead>
                <tr>
                    <th class="text-start">Category Name</th>
                    <th class="text-start">Description</th>
                    <th class="text-start">Action</th>
                </tr>
            </thead>
            <tbody>
              <% categories.forEach(category => { %>
                <input type="hidden" value="<%= category._id %>" name="id" id="">
                  <tr class="editable-row">
                    
                      <td class="text-start">
                          <span class="editable-field"><%= category.name %></span>
                          <input type="text" name="categoryname" class="form-control d-none" value="<%= category.name %>">
                      </td>
                      <td class="text-start">
                          <span class="editable-field"><%= category.description %></span>
                          <input type="text" name="categorydescription" class="form-control d-none" value="<%= category.description %>">
                      </td>
                      <td class="text-start">
                          <button type="button" class="btn btn-primary btn-sm edit-button">Edit</button>
                          <a href="updatecategory/<%= category?._id %>"><button type="submit" class="btn btn-success btn-sm save-button d-none" data-category-id="<%= category._id %>">Save</button></a>
                          <button type="button" class="btn btn-danger btn-sm cancel-button d-none">Cancel</button>
                      </td>
                  </tr>
              <% }); %>
          </tbody>
        </table>
      </form>
        
      </div>
