<div class="card py-5">
    <div class="card-body">
      <h5 class="card-title fw-semibold mb-4">ADD PRODUCT</h5>
  
      <form action="saveproduct" method="post" enctype="multipart/form-data" id="myForm" onsubmit="return validateProduct()">
  
        <div class="mb-3">
          <label for="productName" class="form-label">Name</label>
          <input type="text" class="form-control" id="productName" name="name" onkeyup="nameValidation()" required>
          <span id="nameError"></span>
        </div>
  
        <div class="mb-3">
          <label for="productDescription" class="form-label">Description</label>
          <textarea class="form-control" id="productDescription" name="description" rows="3" onkeyup="descriptionValidation()" required></textarea>
          <span id="desError"></span>
        </div>
  
        <div class="mb-3">
          <label for="productCategory" class="form-label">Category</label>
          <select class="form-select" id="productCategory" name="category">
            <% categories.forEach(category=> { %>
            <option value="<%= category._id %>">
              <%= category.name %>
            </option>
            <% }); %>
          </select>
        </div>
  
        <div class="mb-3">
          <label for="productPrice" class="form-label">Price</label>
          <input type="number" step="0.01" class="form-control" id="productPrice" name="price" onkeyup="priceValidation()" required>
          <span id="priceError"></span>
        </div>      
  
        <div class="mb-3">
          <label for="productPrice" class="form-label">Offer Price</label>
          <input type="number" step="0.01" class="form-control" id="offerprice" name="offerprice" onkeyup="opriceValidation()" required>
          <span id="opriceError"></span>
        </div>
  
        <div class="mb-3">
          <label for="productPrice" class="form-label">Stock</label>
          <input type="number" step="1" class="form-control" id="stock" name="stock" onkeyup="stockValidation()" required>
          <span id="stockError"></span>
        </div>
  
        <hr class="mb-4 mt-0">
        <div class="col-lg-6">
            <div class="card mb-4">
              <div class="card-header">
                <h4>Media</h4>
              </div>
              <div class="input-upload">
                <img src="/imgs/theme/upload.svg" id="imgView1" alt="">
                <input class="form-control" id="input1" name="images" onchange="viewImage1(event),viewImage(event, 1)"
                  type="file" accept=".jpg, .jpeg, .png, .gif">
              </div>
              <div class="image-cropper" style="display:none;">
                <img src="" id="croppedImg1" alt="">
                <button type="button" id="saveButton1" class="btn-sm btn-primary">Save</button>
              </div>
    
            </div> <!-- card end// -->
          </div>
