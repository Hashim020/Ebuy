<!-- ===========Start of Catogory card=================================================================================================================== -->

<div class="container-fluid">
    <div class="card">
        <div class="card-body">
            <h2 class="d-inline-block">User Management</h2>
            <% if(typeof message!=='undefined' ){ %>
              <h6 style="color:#04c414;">  <%= message %></h6>
              <% } %>

              <table id="myTable" class="table table-bordered">
                <thead>
                  <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Actions</th>
                  </tr>
                </thead>
                <tbody>
                    <% user.forEach(User => { %>
                  <tr>
                    <td><%=User._id%></td>
                    <td><%=User.name%></td>
                    <td><%=User.email%></td>
                    <td>
                      <% if(User.status===true){ %>
                      <a href="unblockuser/<%=User?._id%>"><button type="button"  class="btn btn-success btn-sm" onclick="unblockUser('user123')" >UNBLOCK</button></a>
                      <%}else{ %>
                      <a href="blockuser/<%=User?._id%>"><button type="button"  class="btn btn-danger btn-sm" onclick="blockUser('user123')">BLOCK</button></a>
                      <%} %>
                    </td>
                  </tr>

                  <!-- Add more rows as needed -->
                </tbody>
              <% }); %>
              </table>

          
        </div>
    </div>
  </div>

