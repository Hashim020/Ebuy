<!-- ===========Start of Catogory card=================================================================================================================== -->
<div class="container mt-4">
    <hr>
    <!-- Display username and shipping address only once for each order -->
    <div class="row mt-4">
        <!-- Shipping Address Box -->
        <div class="col-md-12">
            <h5 class="text-center">Username: <%= order.user.name %></h5>
        </div>
        <div class="col-md-12 mb-3">
            <div class="border p-3">
                <h5>Shipping Address</h5>
                <p><strong>Name: <%= order.user.name %></strong></p>
                <!-- Replace order.userAddress with order.address -->
                <p><strong>Address: <%= order.address.address %></strong></p>
                <p><strong>City: <%= order.address.city %></strong></p>
                <p><strong>State: <%= order.address.state %></strong></p>
                <p><strong>Pin Code: <%= order.address.pincode %></strong></p>
            </div>
        </div>
    </div>
    <div class="text-start">
        <p>Payment Method: <strong><%= order.paymentMethod %></strong> </p>
    </div>
    <div class="text-start"> 
        <p>Order Status : <strong> <%= order.status%></strong></p>  
        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    <select class="form-control" id="statusDropdown">
                    <option value="Pending">Pending</option>
                    <option value="Processing">Processing</option>
                    <option value="Shipped">Shipped</option>
                    <option value="Delivered">Delivered</option>
                    <option value="CANCELLED">Cancelled</option>
                    <option value="Return-Req">Return Request</option>
                    <option value="Return Accepted">Return Accepted</option>
                    </select>
                </div>
                <div class="col-md-6">
                    <button class="btn btn-primary" onclick="updateStatus()">Update</button>
                    <input type="hidden" id="orderId" value="<%=order._id%>">
                </div>
            </div>
        </div> 
    </div>
    

    <!-- Loop through each item -->
    <% order.items.forEach((item, index) => { %>
        <!-- Product Details Box -->
        <div class="row mt-4">
            <div class="col-md-12">
                <table class="table table-bordered">
                    <tbody>
                        <tr>
                            <td>
                                <div class="ms-3">
                                    <h6><%= item.productId.name %></h6>
                                </div>
                            </td>
                            <td><%= item.quantity %></td>
                            <td>â‚¹<%= item.total %></td>
                            <td><%= new Date(order.createdAt).toLocaleDateString() %></td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    <% }) %>

    <div class="row mt-4">
        <div class="col-md-12">
            <a href="javascript:history.back()" class="btn btn-primary">Go Back</a>
        </div>
    </div>
</div>

