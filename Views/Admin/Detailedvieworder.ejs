    .order-status {
    font-weight: bold;
}

.order-status.Pending {
    color: blue;
}

.order-status.Processing {
    color: blue;
}

.order-status.Shipped {
    color: blue;
}

.order-status.Delivered {
    color: green;
}

.order-status.CANCELLED {
    color: red;
}

.order-status.Return-Req {
    color: blue;
}

.order-status.Return-Accepted {
    color: blue;
