<div class="container-fluid">
  <div class="card">
      <div class="card-body">
        <h2 class="d-inline-block">Product Management</h2>
          <h2 class="d-inline-block"></h2>
          <% if(typeof message!=='undefined' ){ %>
            <h6 style="color:#04c414;">  <%= message %></h6>
            <% } %>
