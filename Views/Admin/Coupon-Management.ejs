                <div class="container mt-5">
                    <h1>Coupon Management</h1>
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Code</th>
                                <th>Discount (%)</th>
                                <th>Status</th>
                                <th>Date of Start</th>
                                <th>Expiration Date</th>
                                <th>Minimum Purchase</th>
                                <th>Maximum Purchase</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% coupons.forEach(coupon=> { %>
                                <tr>
                                    <td>
                                        <%= coupon._id %>
                                    </td>
                                    <td>
                                        <%= coupon.code %>
                                    </td>
                                    <td>
                                        <%= coupon.discount %>
                                    </td>
                                    <td>
