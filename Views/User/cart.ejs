<script>

        function editQuantity(cartId, proId, userId, index, count) {
            console.log(cartId, proId, userId, index, count);
            const quantity = document.getElementById(`qty-val-${proId}`).value
            count = parseInt(count)
            if (quantity == 1 && count == -1) {
              Swal.fire({
                title: 'Are you sure?',
                text: "You won't be able to revert this!",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Yes, delete it!',
                timer: 3000
              }).then((result) => {
                if (result.isConfirmed) {
                  $.ajax({
                    url: 'editQuantity',
                    method: 'PUT',
                    data: {
                      cartId: cartId,
                      proId: proId,
                      userId: userId,
                      count: count,
                      quantity: quantity
                    },
                    success: (response) => {
                      console.log(response.status,'ll');
                      if (response.status) {
                        location.reload()
        
                      }
                    }
                  })
                }
              })
            } else {
              $.ajax({
                url: 'editQuantity',
                method: 'PUT',
                data: {
                  cartId: cartId,
                  proId: proId,
                  userId: userId,
                  count: count,
                  quantity: quantity,
                },
                success: (response) => {
                  if (response.status==true) {
                    const qtyElem = document.querySelector(`#qty-val-${proId}`);
                    qtyElem.value = response.newQuantity;
                    const subTotalVal = document.querySelector(`#subTotal-${proId}`);
                    console.log("Subtotal;"+subTotalVal)
                    subTotalVal.innerHTML = response.newSubTotal;
                    document.getElementById('total').innerHTML = response.cartTotal;
                    document.getElementById('total1').innerHTML = response.cartTotal;
                    
                  }
                  else if(response.status=='outOfStock'){
                    Swal.fire({
                icon: 'warning',
                title: 'Out of Stock',
                showConfirmButton: false,
                timer : 4000
              });
    
                  }
                }
              })
            }
        
          }
  
          function deleteProduct(cartId, proId,quantity) {
      Swal.fire({
        title: 'Are you sure?',
        text: "You won't be able to revert this!",
        icon: 'warning',
        showCancelButton: true,
        confirmButtonColor: '#3085d6',
        cancelButtonColor: '#d33',
        confirmButtonText: 'Yes, delete it!',
        timer: 3000
      }).then((result) => {
        if (result.isConfirmed) {
          $.ajax({
            url: 'deleteProduct',
            method: 'DELETE',
            data: {
              cartId: cartId,
              proId: proId,
              quantity,quantity
            },
            success: (response) => {
              if (response.status) {
                location.reload()
              }
            }
          })
        }
      })
  
    }
          </script>
        <!-- jQuery Plugins -->
        <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11.1.2/dist/sweetalert2.all.min.js"></script>

        
    </body>
