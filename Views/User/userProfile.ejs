    <script>

function validateEmail(email) {
    // Regular expression for validating email addresses
    const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
    return emailRegex.test(email);
}

function validateMobile(mobile) {
    // Regular expression for validating mobile numbers (assuming 10-digit format)
    const mobileRegex = /^\d{10}$/;
    return mobileRegex.test(mobile);
}


async function updateProfile() {
    try {
        var name = document.getElementById('editName').value;
        var email = document.getElementById('editEmail').value;
        var mobile = document.getElementById('editMobile').value;
        var modal = new bootstrap.Modal(document.getElementById('editProfileModal'));

        // Validate email
        if (!validateEmail(email)) {
            swal.fire("Error", "Please enter a valid email address", "error");
            return;
        }

        // Validate mobile number
        if (!validateMobile(mobile)) {
            swal.fire("Error", "Please enter a valid 10-digit mobile number", "error");
            return;
        }

        // Prepare the data to send
        var data = {
            name: name,
            email: email,
            mobile: mobile
        };

        // Send the POST request using fetch
        const response = await fetch('/update-profile', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json'
            },
            body: JSON.stringify(data)
        });

        if (!response.ok) {
            throw new Error('Network response was not ok');
        }

        const responseData = await response.json();
        console.log('Success:', responseData);

        if (responseData) {
            // Show success SweetAlert
            await swal.fire({
                title: "Success!",
                text: "Profile updated successfully!",
                icon: "success",
                timer: 1300,
                showConfirmButton: false
            });

            // Close the modal
            modal.hide();

            // Reload the page after a successful update
            window.location.reload();
        }

    } catch (error) {
        console.error('Error:', error);
    }
}


// ==============================================update password=================================================================================

async function updatePassword() {
  try {
    var oldPassword = document.getElementById('oldPassword').value;
    var newPassword = document.getElementById('newPassword').value;
    var confirmPassword = document.getElementById('confirmPassword').value;
    var modal = new bootstrap.Modal(document.getElementById('editPasswordModal'));

    if (newPassword !== confirmPassword) {
      swal.fire({
        title: "Error",
        text: "New password and confirmation password do not match!",
        icon: "error"
      });
      return;
    }

    if (confirmPassword.length < 6 || newPassword.length < 6) {
      swal.fire("Error", "New password must be at least 6 characters long", "error");
      return;
    }

    // Prepare data for the request
    var data = {
      oldPassword: oldPassword,
      newPassword: newPassword
    };

    const response = await fetch('/update-password', {
      method: 'PATCH',
      headers: {
        'Content-Type': 'application/json'
      },
      body: JSON.stringify(data)
    });

    const responseData = await response.json();
    console.log('Response Data:', responseData);
    if(responseData.success){
      await swal.fire({
        title: "Success!",
        text: "Password updated successfully",
        icon: "success",
        timer: 1300,
        showConfirmButton: false
      });
      window.location.reload();
    } else if(responseData.success===false) {
      await swal.fire({
        title: "Error",
        text: responseData.message,
        icon: "error",
        timer: 1300,
      });
    }

  } catch (error) {
    console.error('Error:', error);
  }
}




