		<!-- jQuery Plugins -->
		<script>
			function addtocart(proId) {
    $.ajax({
        url: '/add-to-cart/' + proId,
        method: 'POST',
        success: (response) => {
            // Check for a success indicator in the response
            if (response.status === true) {
                Swal.fire({
                    title: 'Added To Cart',
                    text: 'Your Product has been added to Cart',
                    icon: 'success',
                    timer: 5000
                });
            } else if (response.status === false) {
                Swal.fire({
                    title: 'Error',
                    text: 'Failed to add product to Cart',
                    icon: 'error'
                });
            } else {
                // If none of the above conditions are met, initiate a GET request to /login
                $.ajax({
                    url: '/login', // Replace with the actual login endpoint
                    method: 'GET',
                    success: (loginResponse) => {
                        // Handle the response from the login request, e.g., redirecting to the login page
                        window.location.href = '/login'; // Redirect to the login page
                    },
                    error: (loginError) => {
                        console.error('Error initiating login request:', loginError);
                        Swal.fire({
                            title: 'Error',
                            text: 'An error occurred while initiating the login request',
                            icon: 'error'
                        });
                    }
                });
            }
        },
        error: (error) => { // Handle any errors that occur during the request
            console.error('Error adding product to cart:', error);
            Swal.fire({
                title: 'Error',
                text: 'An error occurred while adding the product to Cart',
                icon: 'error'
            });
        }
    });
}
