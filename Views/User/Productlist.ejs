			<script>
				function sendRequest() {
    var selectedOption = document.getElementById("sortSelect").value;
    var categoryId = "<%=categories._id%>";
    var url = "/Sort-Products?category_id=" + categoryId + "&option=" + selectedOption;

    console.log('working');

    // Send the GET request
    fetch(url)
        .then(response => {
            if (!response.ok) {
                throw new Error('Network response was not ok');
            }
            return response.text(); // Assuming response is HTML content
        })
        .then(data => {
            // Create a temporary element to parse the HTML
            var tempElement = document.createElement('div');
            tempElement.innerHTML = data;

            // Extract the product list from the HTML response
            var productList = tempElement.querySelector('#store .row');

            // Get the current product list element on the page
            var currentProductList = document.querySelector('#store .row');

            // Replace the current product list with the sorted one
            currentProductList.innerHTML = productList.innerHTML;
        })
        .catch(error => {
            console.error('Error:', error);
        });
}


			</script>









