		<script>
			document.addEventListener("DOMContentLoaded", function () {
				const placeOrderButton = document.getElementById("placeOrderButton");
				const addressForm = document.getElementById("addressForm");

				placeOrderButton.addEventListener("click", function () {
					// Get the selected address
					event.preventDefault();
					const selectedAddress = addressForm.querySelector(
						'input[name="selectedAddress"]:checked'
					);

					if (selectedAddress) {
						const addressId = selectedAddress.value;

						// Get the selected payment method
						const selectedPayment = document.querySelector(
							'input[name="payment"]:checked'
						);

						if (selectedPayment) {
							const paymentMethod = selectedPayment.id;

							// Send a POST request with the selected address ID and payment method
							fetch("/place-order", {
								method: "POST",
								headers: {
									"Content-Type": "application/json",
								},
								body: JSON.stringify({
									addressId: addressId,
									paymentMethod: paymentMethod,
								}),
							}).then(async (response) => {
								if (response.ok) {
									const jsonResponse = await response.json(); // Parse the JSON response
									// Check if the response indicates success
									if (jsonResponse.success) {
										// Redirect to the thank-you page
										window.location.href = 'http://localhost:3000/place-order-thankyou';
									} else if(jsonResponse.onlinepayment) {
									 Razorpaypayment(jsonResponse);
									}
								} else {
									// Handle non-OK response (e.g., server error)
									alert('Failed to place the order.');
								}
							})
								.catch((error) => {
									console.error('An error occurred:', error);
								});

						} else {
							// Handle the case where no payment method is selected
							alert("Please select a payment method before placing the order.");
						}
					} else {
						// Handle the case where no address is selected
						alert("Please select an address before placing the order.");
					}
				});
			});


